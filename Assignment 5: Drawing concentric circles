package assignment2;



import java.awt.Graphics;
import javax.swing.JPanel;

public class Circles extends JPanel 
{ 
    public void paintComponent(Graphics g)
    {
        super.paintComponent(g);
        int shift = 0;
        int centerX = getWidth()/2;
        int centerY = getHeight()/2;
           // variable shift represents moving the position of the upper-left corner of the bounding rectangle.   
            for(int circles = 0; circles <= 11; circles++)
                {
                    shift = shift - 10;
                    g.drawOval(centerX - (300 + shift), centerY - (300 + shift), 240 - (circles * 20), 240 - (circles * 20));
    
            
                }
    
    

    }
}

